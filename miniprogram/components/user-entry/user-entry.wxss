.user-entry {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f0f0f0;
}

.user-badge {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: #f0f0f0;
}

.detail-btn {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.7;
} 