<view class="user-entry">
  <view class="user-info">
    <!-- 用户头像区域 -->
    <view class="avatar-container">
      <image class="user-avatar" 
             src="{{userAvatar}}" 
             mode="aspectFill">
      </image>
      <!-- 用户徽章 -->
      <image class="user-badge" 
             src="{{badgeIcon}}" 
             mode="aspectFit">
      </image>
    </view>
  </view>

  <!-- 卡牌按钮 -->
  <view class="album-btn-container" bindtap="onAlbumTap">
    <image class="album-btn-icon"
           src="/images/album.png"
           mode="aspectFit">
    </image>
    <text class="album-btn-text">卡牌</text>
  </view>

  <!-- 详情按钮 -->
  <view class="detail-btn-container" bindtap="onDetailTap">
    <image class="detail-btn-icon"
           src="/images/detail.png"
           mode="aspectFit">
    </image>
    <text class="detail-btn-text">详情</text>
  </view>

  <!-- 用户弹窗 -->
  <user-modal show="{{showUserModal}}" bind:close="onModalClose"></user-modal>
</view> 