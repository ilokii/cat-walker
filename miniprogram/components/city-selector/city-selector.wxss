.city-selector {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  visibility: hidden;
}

.city-selector.visible {
  visibility: visible;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
}

.city-selector.visible .content {
  transform: translateY(0);
}

.header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.close {
  position: absolute;
  right: 30rpx;
  font-size: 40rpx;
  color: #999;
}

.location-btn {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.location-btn .icon {
  margin-right: 10rpx;
}

.location-btn .loading {
  margin-left: auto;
  color: #999;
}

.province-list {
  height: calc(100% - 180rpx);
}

.province-item {
  border-bottom: 1rpx solid #eee;
}

.province-name {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.province-name.single {
  color: var(--primary-color);
}

.arrow {
  font-size: 24rpx;
  transition: transform 0.3s;
}

.arrow.up {
  transform: rotate(180deg);
}

.city-list {
  overflow: hidden;
  max-height: 0;
  transition: max-height 0.3s ease-out;
}

.city-list.expanded {
  max-height: 1000px;
  padding: 10rpx 0;
}

.city-item {
  padding: 20rpx 60rpx;
  color: #666;
}

.city-item:active {
  background: #f5f5f5;
} 