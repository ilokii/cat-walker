.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  visibility: hidden;
}

.modal.visible {
  visibility: visible;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
}

.content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  overflow: hidden;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 40rpx 0 20rpx;
  color: #333;
}

.message {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  padding: 0 40rpx 40rpx;
}

.buttons {
  display: flex;
  padding: 0 40rpx 40rpx;
  gap: 20rpx;
}

.buttons.visited {
  flex-direction: column;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.btn.confirm {
  background: var(--primary-color);
  color: #fff;
}

.btn.walk {
  background: var(--primary-color);
  color: #fff;
}

.btn.teleport {
  background: #4CAF50;
  color: #fff;
}

.btn:active {
  opacity: 0.8;
} 