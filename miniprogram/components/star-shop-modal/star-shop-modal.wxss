.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 680rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  position: relative;
  padding: 40rpx;
  text-align: center;
  border-bottom: 2rpx solid #eee;
  background: #f8f8f8;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 48rpx;
  color: #666;
}

.modal-body {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.description {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 40rpx;
  font-weight: 600;
}

.pack-icon {
  width: 280rpx;
  height: 280rpx;
  margin: 30rpx 0;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.pack-desc {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin: 30rpx 0 48rpx;
  line-height: 1.6;
}

.exchange-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 360rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 48rpx;
  color: white;
  font-size: 36rpx;
  border: none;
  padding: 0;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.exchange-btn.disabled {
  background: linear-gradient(135deg, #cccccc, #bbbbbb);
  color: #fff;
  box-shadow: none;
}

.exchange-btn .star-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 12rpx;
  margin-top: -8rpx;
  flex-shrink: 0;
}

.exchange-btn text {
  line-height: 96rpx;
} 