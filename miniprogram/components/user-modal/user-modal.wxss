.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 90vh;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.avatar-section {
  display: flex;
  justify-content: center;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: #f0f0f0;
}

.stats-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.badges-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.badges-list {
  max-height: 360rpx;
}

.badges-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.badge-item {
  aspect-ratio: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

.badge-item.selected {
  background: #e8f5e9;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

.badge-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.no-badges {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.get-badges-btn {
  background: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  border: none;
} 