.daily-tasks {
  background: #fff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-item {
  font-size: 28rpx;
  color: #666;
}

.progress-container {
  position: relative;
  padding: 40rpx 0;
}

.rewards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.reward-item {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.pack-icon {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.reward-item.locked .pack-icon {
  filter: grayscale(100%);
  opacity: 0.5;
}

.reward-item.available .pack-icon {
  opacity: 1;
}

.reward-item.completed .pack-icon {
  opacity: 1;
}

.status-icon {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
}

.red-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff4444;
  border-radius: 50%;
}

.check-icon {
  width: 24rpx;
  height: 24rpx;
}

.progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #4CAF50, #8BC34A);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.steps-marks {
  position: relative;
  margin-top: 10rpx;
  height: 40rpx;
}

.step-mark {
  position: absolute;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #999;
} 