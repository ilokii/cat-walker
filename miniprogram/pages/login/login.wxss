.container {
  height: 100vh;
  position: relative;
  overflow: hidden;
  background-color: #ffffff;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  opacity: 0.2;
  object-fit: cover;
}

.content {
  position: relative;
  z-index: 2;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 200rpx 0 300rpx;
  box-sizing: border-box;
}

.logo {
  width: 80%;
  max-width: 600rpx;
  margin-bottom: 20rpx;
}

.intro-box {
  width: 80%;
  max-width: 600rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.intro-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.intro-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.intro-item {
  font-size: 28rpx;
  color: #666;
  padding-left: 20rpx;
  position: relative;
}

.intro-item::before {
  content: "â€¢";
  position: absolute;
  left: 0;
  color: #07c160;
}

.login-btn {
  width: 400rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  padding: 0 30rpx;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.login-btn text {
  line-height: 48rpx;
}

.privacy-link {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #576b95;
  text-decoration: underline;
} 