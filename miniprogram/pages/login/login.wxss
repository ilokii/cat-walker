.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background-color: #f5f5f5;
  padding: 200rpx 0 300rpx;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.login-btn {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #4CAF50;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
} 