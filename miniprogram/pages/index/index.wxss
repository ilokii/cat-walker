page {
  background: #f5f5f5;
}

.safe-area {
  padding-top: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: #f5f5f5;
}

/* 授权提示样式 */
.auth-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.auth-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.auth-text {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.auth-button {
  background: #4CAF50;
  color: #ffffff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
}

/* Loading遮罩样式 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 统计区域样式 */
.stats-box {
  background: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.stats-content {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
}

.stat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 旅行区域样式 */
.travel-box {
  background: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.progress-row {
  margin: 20rpx 0;
}

.travel-progress {
  padding: 20rpx;
}

.progress-container {
  position: relative;
  margin-bottom: 10rpx;
}

.progress-triangle {
  position: absolute;
  top: -10rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #4CAF50;
  transform: translateX(-50%);
  z-index: 1;
}

.progress-bar {
  width: 100%;
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}

.cities-row {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.city-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.city-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.city-name {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 5rpx;
}

.city-label {
  font-size: 24rpx;
  color: #666666;
}

.bottom-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 0 30rpx;
}

.select-btn, .auth-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.select-btn, .auth-btn {
  background: #07c160;
  color: #fff;
} 