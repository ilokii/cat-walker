.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 通用区域样式 */
.stats-section,
.travel-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

/* 统计区域样式 */
.stats-content {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stats-label {
  font-size: 28rpx;
  color: #666;
}

.stats-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 城市信息区域样式 */
.cities-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.city-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.city-icon {
  width: 80rpx;
  height: 80rpx;
}

.city-text {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.city-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.province-name {
  font-size: 24rpx;
  color: #666;
}

.no-city {
  font-size: 32rpx;
  color: #999;
}

/* 进度条区域样式 */
.progress-area {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.progress-bar-container {
  width: 100%;
  height: 40rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.progress-bar {
  height: 100%;
  background-color: #4CAF50;
  border-radius: 20rpx;
  transition: width 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.progress-steps {
  font-size: 24rpx;
  color: #666;
  text-align: center;
} 