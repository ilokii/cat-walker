.container {
  min-height: 100vh;
  padding: 30rpx;
  padding-top: 180rpx;
  box-sizing: border-box;
  background-color: #f8f9fa;
}

/* 自定义导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 999;
  padding-top: 100rpx;
  padding-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  text-align: center;
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
}

/* 通用区域样式 */
.stats-section,
.travel-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  display: block;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #07c160;
  border-radius: 4rpx;
}

.section-title.center {
  text-align: center;
}

.section-header {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 20rpx;
}

/* 统计区域样式 */
.stats-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  gap: 40rpx;
  min-height: 90rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-height: 90rpx;
  justify-content: center;
}

.stats-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  flex-shrink: 0;
}

.stats-value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 4rpx;
}

/* 城市信息区域样式 */
.cities-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  gap: 40rpx;
}

.city-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 16rpx;
  gap: 16rpx;
  width: 0;
}

.city-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.city-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  width: 100%;
}

.city-name {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.province-name {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.no-city {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  width: 100%;
}

/* 进度条区域样式 */
.progress-area {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  background-color: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
}

.travel-progress-container {
  width: 100%;
  height: 44rpx;
  background-color: #d1d5db;
  border-radius: 22rpx;
  overflow: hidden;
  position: relative;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.travel-progress-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
  font-size: 26rpx;
  font-weight: bold;
  color: #1a1a1a;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.9);
}

.travel-progress-bar {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 22rpx;
  transition: width 0.5s ease;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.progress-steps {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  font-weight: 500;
}

/* 到达提示弹窗样式 */
.arrival-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  width: 85%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.modal-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.modal-text {
  font-size: 34rpx;
  color: #333;
  text-align: center;
  line-height: 1.5;
}

.modal-subtext {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin: 10rpx 0 30rpx;
}

.modal-button {
  background: linear-gradient(90deg, #4CAF50, #45a049);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: bold;
  padding: 24rpx 80rpx;
  border-radius: 44rpx;
  border: none;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.modal-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.2);
}

/* 悬浮刷新按钮 */
.floating-refresh-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
}

.refresh-icon {
  font-size: 50rpx;
  color: #666;
  font-weight: bold;
}

.floating-refresh-btn:active {
  background-color: #f8f9fa;
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.album-entry {
  position: fixed;
  left: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.album-icon {
  width: 60rpx;
  height: 60rpx;
} 