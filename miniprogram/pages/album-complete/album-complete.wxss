.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 48rpx;
  color: #333;
  margin-bottom: 60rpx;
  font-weight: bold;
}

.reward {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 240rpx;
}

.reward-icon {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.no-badge {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.description {
  font-size: 32rpx;
  color: #666;
  margin: 20rpx 0;
  text-align: center;
}

.hint {
  font-size: 28rpx;
  color: #999;
  margin-top: 60rpx;
  text-align: center;
} 