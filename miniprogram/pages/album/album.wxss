.album-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.album-title {
  font-size: 36rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.countdown {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 30rpx;
}

.album-reward {
  margin-bottom: 40rpx;
}

.reward-badge {
  width: 120rpx;
  height: 120rpx;
}

.sets-container {
  flex: 1;
  width: 100%;
}

.sets-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 0 10rpx;
}

.set-item {
  position: relative;
  aspect-ratio: 1;
  background: #333;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.set-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  object-fit: cover;
  background: #444;
  margin-bottom: 20rpx;
}

.set-cover-mask {
  position: absolute;
  top: 20rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.2);
  pointer-events: none;
}

.set-name {
  position: static;
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  margin-bottom: 10rpx;
  width: 100%;
}

.set-progress {
  position: static;
  color: #ffffff;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-top: auto;
}

.close-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  margin-top: 40rpx;
} 