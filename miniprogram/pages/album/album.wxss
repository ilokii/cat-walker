.album-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.album-title {
  font-size: 44rpx;
  color: #333;
  margin: 40rpx 0 20rpx;
  font-weight: bold;
}

.countdown {
  font-size: 32rpx;
  color: #ff9000;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.album-reward-container {
  background: #fff;
  padding: 30rpx;
  margin: 0 20rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(100% - 40rpx);
}

.album-reward {
  margin-bottom: 20rpx;
}

.reward-badge {
  width: 140rpx;
  height: 140rpx;
}

.reward-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 总进度条样式 */
.total-progress-container {
  width: 85%;
  margin: 0 auto 40rpx;
  padding: 0 20rpx;
}

.progress-bar {
  position: relative;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 22rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ffd700, #ff9000);
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.sets-container {
  flex: 1;
  width: 100%;
}

.sets-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 20rpx;
}

.set-item {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.set-cover-container {
  width: 100%;
  padding-top: 100%;
  position: relative;
  background: #f0f0f0;
}

.set-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
  padding: 20rpx;
  box-sizing: border-box;
}

.set-info {
  padding: 16rpx;
  background: #fff;
}

.set-name {
  color: #333;
  font-size: 32rpx;
  text-align: center;
  font-weight: 500;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.set-progress-container {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 0 12rpx;
}

.set-progress-bar {
  height: 12rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
}

.set-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ffd700, #ff9000);
  transition: width 0.3s ease;
}

.set-progress-text {
  color: #666;
  font-size: 24rpx;
  text-align: center;
}

.close-btn {
  width: 88rpx;
  height: 88rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 36rpx;
  margin: 40rpx 0;
  font-weight: bold;
}

.star-shop-entry-container {
  position: absolute;
  right: -40rpx;
  top: 120rpx;
  z-index: 100;
  transform: scale(1.2);
  transform-origin: right top;
} 