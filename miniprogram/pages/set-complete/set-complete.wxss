.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.set-cover-container {
  width: 500rpx;
  height: 500rpx;
  margin-bottom: 60rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.set-cover {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.reward {
  margin: 20rpx 0 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reward-icon {
  width: 240rpx;
  height: 240rpx;
  animation: shine 2s infinite;
}

.description {
  font-size: 36rpx;
  color: #333;
  margin: 20rpx 0;
  text-align: center;
  font-weight: 500;
}

.hint {
  font-size: 28rpx;
  color: #999;
  margin-top: 40rpx;
  opacity: 0.8;
}

@keyframes shine {
  0% {
    transform: scale(1) rotate(0deg);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.1) rotate(180deg);
    opacity: 1;
  }
  100% {
    transform: scale(1) rotate(360deg);
    opacity: 0.8;
  }
} 