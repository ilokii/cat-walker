.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.set-icon {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.reward {
  margin: 40rpx 0;
}

.reward-icon {
  width: 200rpx;
  height: 200rpx;
  animation: shine 2s infinite;
}

.description {
  font-size: 32rpx;
  color: #666;
  margin: 40rpx 0;
  text-align: center;
}

.hint {
  font-size: 32rpx;
  color: #666;
  margin-top: 40rpx;
}

@keyframes shine {
  0% {
    transform: scale(1) rotate(0deg);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.1) rotate(180deg);
    opacity: 1;
  }
  100% {
    transform: scale(1) rotate(360deg);
    opacity: 0.8;
  }
} 