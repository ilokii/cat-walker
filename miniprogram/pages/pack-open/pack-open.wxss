.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin: 80rpx 0;
  text-align: center;
  flex-shrink: 0;
}

.pack-icon {
  width: 400rpx;
  height: 500rpx;
  margin-bottom: 0;
  flex-shrink: 0;
}

.unopened-section {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
}

.pack-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.pack-bottom {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: auto;
  padding-bottom: 100rpx;
}

.pack-desc {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin: 0 60rpx 40rpx;
  line-height: 1.6;
  max-width: 600rpx;
}

.hint {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  margin-top: 0;
  opacity: 0.8;
}

.cards-section {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-top: 60rpx;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 100rpx 30rpx;
  padding: 20rpx;
  width: 100%;
  max-width: 900rpx;
  margin: 0 auto;
  box-sizing: border-box;
  position: relative;
}

.bottom-section {
  width: 100%;
  position: relative;
  padding-bottom: 80rpx;
  flex-shrink: 0;
  margin-top: 120rpx;
}

.convert-desc {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin: 0 40rpx 40rpx;
  line-height: 1.5;
  position: relative;
}

.card-item {
  position: relative;
  aspect-ratio: 3/4;
  margin-bottom: 40rpx;
}

.card-frame {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  overflow: visible;
}

.card-frame.converting .card-image,
.card-frame.converting .card-stars,
.card-frame.converting .card-name,
.card-frame.converting .new-tag {
  display: none;
}

.card-frame-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  pointer-events: none;
}

.card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: 1;
}

.card-name {
  position: absolute;
  bottom: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #333;
  font-size: 40rpx;
  text-align: center;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  width: 160%;
  padding: 8rpx 0;
  font-weight: 500;
  white-space: nowrap;
}

.card-stars {
  position: absolute;
  top: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffd700;
  font-size: 48rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  padding: 4rpx 16rpx;
  display: flex;
  gap: 0;
  z-index: 3;
}

.star {
  margin: 0 -1rpx;
  filter: drop-shadow(0 2px 2px rgba(0, 0, 0, 0.3));
}

.new-tag {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 3;
  pointer-events: none;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

.star-reward {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.star-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

.star-count {
  font-size: 96rpx;
  color: #ffd700;
  font-weight: bold;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.converting {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
} 