.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.pack-icon {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 60rpx;
}

.hint {
  font-size: 32rpx;
  color: #666;
  margin-top: 40rpx;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.card-item {
  position: relative;
  aspect-ratio: 3/4;
}

.card-frame {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-name {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  width: 85%;
  background: rgba(0, 0, 0, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.card-stars {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffd700;
  font-size: 32rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  background: rgba(0, 0, 0, 0.6);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  gap: 4rpx;
  z-index: 1;
}

.star {
  margin: 0 2rpx;
}

.new-tag {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 2;
  pointer-events: none;
}

.star-reward {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.star-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.star-count {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.converting {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
} 