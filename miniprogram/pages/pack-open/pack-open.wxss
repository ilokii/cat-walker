.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.pack-icon {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 60rpx;
}

.hint {
  font-size: 32rpx;
  color: #666;
  margin-top: 40rpx;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.card-item {
  position: relative;
  aspect-ratio: 3/4;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.new-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: #ff4d4f;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.star-reward {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.star-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.star-count {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
}

.converting {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
} 