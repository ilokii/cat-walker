.guide-container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  position: relative;
}

.black-screen {
  background-color: #000000;
}

.content-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  transition: opacity 0.5s ease;
  margin-top: -300rpx;
}

.guide-image {
  width: 100%;
  height: 600rpx;
  margin-bottom: 40rpx;
}

.guide-text {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  line-height: 1.6;
  padding: 0 40rpx;
}

.black-screen .guide-text {
  color: #ffffff;
}

.button-area {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
}

.start-button {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: -300rpx;
} 