.set-detail-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.set-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.set-reward {
  margin-bottom: 30rpx;
}

.reward-badge {
  width: 120rpx;
  height: 120rpx;
}

.progress-container {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.progress-bar {
  height: 30rpx;
  background-color: #f0f0f0;
  border-radius: 15rpx;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4CAF50;
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #333;
  font-size: 24rpx;
}

.cards-container {
  flex: 1;
  overflow: hidden;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 20rpx;
  padding: 20rpx;
}

.card-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-frame {
  width: 280rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-image {
  width: 200rpx;
  height: 300rpx;
  object-fit: contain;
  border-radius: 10rpx;
}

.card-image.uncollected {
  opacity: 0.8;
  filter: brightness(0.9);
}

.card-info {
  margin-top: 10rpx;
  text-align: center;
  width: 100%;
}

.card-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.card-stars {
  color: #FFD700;
  font-size: 24rpx;
}

.star {
  margin: 0 2rpx;
}

.debug-info {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
  text-align: left;
  width: 100%;
  word-break: break-all;
}

.close-btn {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 星级样式 */
.star-1 {
  border: 2rpx solid #CD7F32;
}

.star-2 {
  border: 2rpx solid #C0C0C0;
}

.star-3 {
  border: 2rpx solid #FFD700;
} 