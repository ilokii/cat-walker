.set-detail-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.set-title {
  font-size: 44rpx;
  color: #333;
  margin: 40rpx 0 20rpx;
  font-weight: bold;
}

.set-reward-container {
  background: #fff;
  padding: 30rpx;
  margin: 0 20rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(100% - 40rpx);
}

.set-reward {
  margin-bottom: 20rpx;
}

.reward-badge {
  width: 140rpx;
  height: 140rpx;
}

.reward-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.progress-container {
  width: 85%;
  margin: 0 auto 40rpx;
  padding: 0 20rpx;
}

.progress-bar {
  position: relative;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 22rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ffd700, #ff9000);
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.cards-container {
  flex: 1;
  width: 100%;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 20rpx;
}

.card-item {
  position: relative;
  aspect-ratio: 3/4;
}

.card-frame {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-image.uncollected {
  filter: brightness(0.8);
}

.card-name {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  width: 85%;
  background: rgba(0, 0, 0, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.card-stars {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffd700;
  font-size: 32rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  background: rgba(0, 0, 0, 0.6);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  gap: 4rpx;
}

.star {
  margin: 0 2rpx;
}

.debug-info {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
  text-align: left;
  width: 100%;
  word-break: break-all;
}

.close-btn {
  width: 88rpx;
  height: 88rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 36rpx;
  margin: 40rpx 0;
  font-weight: bold;
} 