.set-detail-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.set-title {
  font-size: 36rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.set-reward {
  margin-bottom: 30rpx;
}

.reward-badge {
  width: 120rpx;
  height: 120rpx;
}

.progress-container {
  width: 80%;
  margin-bottom: 40rpx;
}

.progress-bar {
  position: relative;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ffd700, #ff9000);
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ffffff;
  font-size: 24rpx;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.cards-container {
  flex: 1;
  width: 100%;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.card-item {
  position: relative;
  aspect-ratio: 3/4;
  background: #333;
  border-radius: 16rpx;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-name {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  width: 85%;
  background: rgba(0, 0, 0, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.card-stars {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffd700;
  font-size: 24rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  background: rgba(0, 0, 0, 0.6);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  gap: 4rpx;
}

.card-unknown {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #444;
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
}

.close-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  margin-top: 40rpx;
} 